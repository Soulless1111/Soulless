                { id: 49, name: "Corsair 4000D Airflow", specs: "Mid-Tower, –æ–ø—Ç–∏–º–∞–ª—å–Ω–∞—è –≤–µ–Ω—Ç–∏–ª—è—Ü–∏—è", price: 8990, formFactor: "Mid-Tower", fans: 2, image: "https://m.media-amazon.com/images/I/81NyR5EERBL._AC_UF894,1000_QL80_.jpg" },
                { id: 50, name: "NZXT H7 Flow", specs: "Mid-Tower, —É–ª—É—á—à–µ–Ω–Ω–æ–µ –æ—Ö–ª–∞–∂–¥–µ–Ω–∏–µ", price: 11990, formFactor: "Mid-Tower", fans: 0, image: "https://microless.com/cdn/products/5d809e94728952a18b6aab14bfc2f260-hi.jpg" },
                { id: 51, name: "be quiet! Silent Base 802", specs: "Mid-Tower, –º–æ–¥—É–ª—å–Ω–∞—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è", price: 13990, formFactor: "Mid-Tower", fans: 3, image: "https://www.bequiet.com/volumes/pim/cases/silentbase/silentbase802window/3d/black/002.jpg" }
            ],
            psu: [
                { id: 52, name: "Corsair RM1000x", specs: "1000W, 80+ Gold, –ø–æ–ª–Ω–æ—Å—Ç—å—é –º–æ–¥—É–ª—å–Ω—ã–π", price: 18990, power: 1000, certification: "80+ Gold", image: "https://s.alicdn.com/@sc04/kf/Ha9ce046e6a6d45f4a6dccb5397354e18E.jpg" },
                { id: 53, name: "Seasonic Prime TX-1000", specs: "1000W, 80+ Titanium, –ø–æ–ª–Ω–æ—Å—Ç—å—é –º–æ–¥—É–ª—å–Ω—ã–π", price: 24990, power: 1000, certification: "80+ Titanium", image: "https://upweek.ru/wp-content/uploads/2021/07/TX1k_02.jpg" },
                { id: 54, name: "be quiet! Straight Power 11 850W", specs: "850W, 80+ Platinum, –ø–æ–ª–Ω–æ—Å—Ç—å—é –º–æ–¥—É–ª—å–Ω—ã–π", price: 14990, power: 850, certification: "80+ Platinum", image: "https://www.hardwareluxx.ru/images/cdn01/297124BDEDC746208687EBA388D4350D/img/79362B3AC38244F3BC9A0EB8C1E4C4A5/bequiet_straight_power_11_review_03_79362B3AC38244F3BC9A0EB8C1E4C4A5.jpg" },
                { id: 55, name: "EVGA SuperNOVA 750 G6", specs: "750W, 80+ Gold, –ø–æ–ª–Ω–æ—Å—Ç—å—é –º–æ–¥—É–ª—å–Ω—ã–π", price: 11990, power: 750, certification: "80+ Gold", image: "https://m.media-amazon.com/images/I/61OM0JzyH8S._UF350,350_QL80_.jpg" },
                { id: 56, name: "Cooler Master MWE Gold 650", specs: "650W, 80+ Gold, –ø–æ–ª—É–º–æ–¥—É–ª—å–Ω—ã–π", price: 7990, power: 650, certification: "80+ Gold", image: "https://28bit.ru/wa-data/public/shop/products/43/50/25043/images/53017/53017.970.jpeg" }
            ]
        };

        let currentBuild = {
            cpu: null, gpu: null, motherboard: null, ram: null,
            cooler: null, storage: null, case: null, psu: null
        };

        let compareList = [];

        // –§–£–ù–ö–¶–ò–Ø –ü–†–û–í–ï–†–ö–ò –°–û–í–ú–ï–°–¢–ò–ú–û–°–¢–ò
        function updateCompatibilityCheck() {
            const compatibilityElement = document.querySelector('.compatibility-check');
            if (!compatibilityElement) return;
            
            const statusElement = compatibilityElement.querySelector('.compatibility-status');
            const detailsElement = compatibilityElement.querySelector('.compatibility-details');
            
            if (!statusElement || !detailsElement) return;
            
            let issues = [];
            let warnings = [];
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞–ª–∏—á–∏–µ –≤—Å–µ—Ö –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã—Ö –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–æ–≤
            const requiredComponents = ['cpu', 'motherboard', 'ram', 'psu'];
            const missingComponents = requiredComponents.filter(comp => !currentBuild[comp]);
            
            if (missingComponents.length > 0) {
                issues.push(`–û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç: ${missingComponents.map(comp => getComponentName(comp)).join(', ')}`);
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞ –∏ –º–∞—Ç–µ—Ä–∏–Ω—Å–∫–æ–π –ø–ª–∞—Ç—ã
            if (currentBuild.cpu && currentBuild.motherboard) {
                if (currentBuild.cpu.socket !== currentBuild.motherboard.socket) {
                    issues.push(`–ü—Ä–æ—Ü–µ—Å—Å–æ—Ä (${currentBuild.cpu.socket}) –Ω–µ —Å–æ–≤–º–µ—Å—Ç–∏–º —Å –º–∞—Ç–µ—Ä–∏–Ω—Å–∫–æ–π –ø–ª–∞—Ç–æ–π (${currentBuild.motherboard.socket})`);
                }
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –æ–ø–µ—Ä–∞—Ç–∏–≤–Ω–æ–π –ø–∞–º—è—Ç–∏ –∏ –º–∞—Ç–µ—Ä–∏–Ω—Å–∫–æ–π –ø–ª–∞—Ç—ã
            if (currentBuild.ram && currentBuild.motherboard) {
                // –í—Å–µ —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–µ –º–∞—Ç–µ—Ä–∏–Ω—Å–∫–∏–µ –ø–ª–∞—Ç—ã –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞—é—Ç DDR5
                if (currentBuild.ram.type !== 'DDR5') {
                    warnings.push(`–†–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è DDR5 –ø–∞–º—è—Ç—å –¥–ª—è –ª—É—á—à–µ–π —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏`);
                }
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –º–æ—â–Ω–æ—Å—Ç—å –±–ª–æ–∫–∞ –ø–∏—Ç–∞–Ω–∏—è
            if (currentBuild.psu) {
                let totalPower = 0;
                
                if (currentBuild.cpu) totalPower += currentBuild.cpu.tdp || 100;
                if (currentBuild.gpu) totalPower += currentBuild.gpu.power || 200;
                if (currentBuild.ram) totalPower += 30;
                if (currentBuild.storage) totalPower += 20;
                if (currentBuild.cooler) totalPower += 10;
                
                // –î–æ–±–∞–≤–ª—è–µ–º –∑–∞–ø–∞—Å 20%
                totalPower = totalPower * 1.2;
                
                if (currentBuild.psu.power < totalPower) {
                    issues.push(`–ë–ª–æ–∫ –ø–∏—Ç–∞–Ω–∏—è (${currentBuild.psu.power}W) –º–æ–∂–µ—Ç –±—ã—Ç—å –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –º–æ—â–Ω—ã–º –¥–ª—è —Å–∏—Å—Ç–µ–º—ã (—Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è ${Math.ceil(totalPower)}W)`);
                } else if (currentBuild.psu.power < totalPower * 1.5) {
                    warnings.push(`–ë–ª–æ–∫ –ø–∏—Ç–∞–Ω–∏—è —Ä–∞–±–æ—Ç–∞–µ—Ç –Ω–∞ –ø—Ä–µ–¥–µ–ª–µ. –†–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –∑–∞–ø–∞—Å 30-50%`);
                }
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –∫—É–ª–µ—Ä–∞ –∏ –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞
            if (currentBuild.cooler && currentBuild.cpu) {
                if (currentBuild.cooler.tdp < currentBuild.cpu.tdp) {
                    warnings.push(`–ö—É–ª–µ—Ä (${currentBuild.cooler.tdp}W TDP) –º–æ–∂–µ—Ç –Ω–µ —Å–ø—Ä–∞–≤–∏—Ç—å—Å—è —Å –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–æ–º (${currentBuild.cpu.tdp}W TDP)`);
                }
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –∫–æ—Ä–ø—É—Å–∞ –∏ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–æ–≤
            if (currentBuild.case && currentBuild.motherboard) {
                const caseFormFactor = currentBuild.case.formFactor;
                const motherboardFormFactor = currentBuild.motherboard.formFactor;
                
                const formFactorHierarchy = {
                    'Mini-ITX': ['Mini-ITX'],
                    'Micro-ATX': ['Mini-ITX', 'Micro-ATX'],
                    'ATX': ['Mini-ITX', 'Micro-ATX', 'ATX'],
                    'E-ATX': ['Mini-ITX', 'Micro-ATX', 'ATX', 'E-ATX']
                };
                
                if (!formFactorHierarchy[caseFormFactor]?.includes(motherboardFormFactor)) {
                    warnings.push(`–ü—Ä–æ–≤–µ—Ä—å—Ç–µ —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å —Ñ–æ—Ä–º-—Ñ–∞–∫—Ç–æ—Ä–æ–≤: –∫–æ—Ä–ø—É—Å ${caseFormFactor}, –º–∞—Ç. –ø–ª–∞—Ç–∞ ${motherboardFormFactor}`);
                }
            }
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–∞ —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏
            const statusIcon = statusElement.querySelector('.status-icon');
            const statusText = statusElement.querySelector('div:last-child');
            
            if (issues.length === 0 && warnings.length === 0 && missingComponents.length === 0) {
                statusIcon.innerHTML = '‚úÖ';
                statusIcon.className = 'status-icon status-success';
                statusText.textContent = '–°–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –ø—Ä–æ–≤–µ—Ä–µ–Ω–∞. –ü—Ä–æ–±–ª–µ–º –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ.';
                detailsElement.innerHTML = '–í—Å–µ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ã —Å–æ–≤–º–µ—Å—Ç–∏–º—ã –º–µ–∂–¥—É —Å–æ–±–æ–π.';
            } else if (missingComponents.length > 0 && issues.length === 0) {
                statusIcon.innerHTML = '‚ö†Ô∏è';
                statusIcon.className = 'status-icon status-warning';
                statusText.textContent = '–î–æ–±–∞–≤—å—Ç–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ã';
                detailsElement.innerHTML = '–î–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏ –¥–æ–±–∞–≤—å—Ç–µ –≤—Å–µ –æ—Å–Ω–æ–≤–Ω—ã–µ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ã.';
            } else if (issues.length > 0) {
                statusIcon.innerHTML = '‚ùå';
                statusIcon.className = 'status-icon status-error';
                statusText.textContent = '–û–±–Ω–∞—Ä—É–∂–µ–Ω—ã –ø—Ä–æ–±–ª–µ–º—ã —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏';
                let detailsHTML = issues.join('<br>');
                if (warnings.length > 0) {
                    detailsHTML += '<br><br><strong>–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏—è:</strong><br>' + warnings.join('<br>');
                }
                detailsElement.innerHTML = detailsHTML;
            } else if (warnings.length > 0) {
                statusIcon.innerHTML = '‚ö†Ô∏è';
                statusIcon.className = 'status-icon status-warning';
                statusText.textContent = '–ï—Å—Ç—å —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–∏ –ø–æ —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏';
                detailsElement.innerHTML = warnings.join('<br>');
            }
        }

        function getComponentName(category) {
            const names = {
                cpu: '–ø—Ä–æ—Ü–µ—Å—Å–æ—Ä',
                gpu: '–≤–∏–¥–µ–æ–∫–∞—Ä—Ç–∞',
                motherboard: '–º–∞—Ç–µ—Ä–∏–Ω—Å–∫–∞—è –ø–ª–∞—Ç–∞',
                ram: '–æ–ø–µ—Ä–∞—Ç–∏–≤–Ω–∞—è –ø–∞–º—è—Ç—å',
                cooler: '–∫—É–ª–µ—Ä',
                storage: '–Ω–∞–∫–æ–ø–∏—Ç–µ–ª—å',
                case: '–∫–æ—Ä–ø—É—Å',
                psu: '–±–ª–æ–∫ –ø–∏—Ç–∞–Ω–∏—è'
            };
            return names[category] || category;
        }

        // –ù–û–í–´–ï –§–£–ù–ö–¶–ò–ò –î–õ–Ø –£–õ–£–ß–®–ï–ù–ò–ô
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function scrollToComponents() {
            const componentsSection = document.getElementById('components');
            if (componentsSection) {
                componentsSection.scrollIntoView({ behavior: 'smooth' });
            }
        }

        function showFloatingTooltip(message) {
            const tooltip = document.getElementById('floating-tooltip');
            const tooltipText = document.getElementById('tooltip-text');
            if (tooltip && tooltipText) {
                tooltipText.textContent = message;
                tooltip.classList.add('show');
                
                setTimeout(() => {
                    tooltip.classList.remove('show');
                }, 5000);
            }
        }

        function updateProgressIndicator() {
            const steps = ['cpu', 'motherboard', 'ram', 'gpu', 'storage'];
            let foundActive = false;
            
            steps.forEach(step => {
                const element = document.getElementById(`step-${step}`);
                if (element) {
                    if (currentBuild[step]) {
                        element.classList.add('completed');
                        element.classList.remove('active');
                    } else if (!foundActive) {
                        element.classList.add('active');
                        element.classList.remove('completed');
                        foundActive = true;
                    } else {
                        element.classList.remove('active', 'completed');
                    }
                }
            });
        }

        function updateQuickTips() {
            const tipText = document.getElementById('quick-tip-text');
            if (!tipText) return;
            
            const tips = [
                "üí° –ù–∞—á–Ω–∏—Ç–µ —Å –≤—ã–±–æ—Ä–∞ –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞ - —ç—Ç–æ –æ—Å–Ω–æ–≤–∞ –≤–∞—à–µ–π —Å–∏—Å—Ç–µ–º—ã!",
                "üí° –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ —Å–æ–∫–µ—Ç –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞ —Å–æ–≤–º–µ—Å—Ç–∏–º —Å –º–∞—Ç–µ—Ä–∏–Ω—Å–∫–æ–π –ø–ª–∞—Ç–æ–π",
                "üí° –î–ª—è –∏–≥—Ä –≤–∞–∂–Ω–∞ –≤–∏–¥–µ–æ–∫–∞—Ä—Ç–∞, –¥–ª—è —Ä–∞–±–æ—Ç—ã - –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä –∏ –æ–ø–µ—Ä–∞—Ç–∏–≤–Ω–∞—è –ø–∞–º—è—Ç—å",
                "üí° –ù–µ —ç–∫–æ–Ω–æ–º—å—Ç–µ –Ω–∞ –±–ª–æ–∫–µ –ø–∏—Ç–∞–Ω–∏—è - –æ—Ç –Ω–µ–≥–æ –∑–∞–≤–∏—Å–∏—Ç —Å—Ç–∞–±–∏–ª—å–Ω–æ—Å—Ç—å —Å–∏—Å—Ç–µ–º—ã",
                "üí° –ü—Ä–æ–≤–µ—Ä—å—Ç–µ —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –æ–ø–µ—Ä–∞—Ç–∏–≤–Ω–æ–π –ø–∞–º—è—Ç–∏ —Å –º–∞—Ç–µ—Ä–∏–Ω—Å–∫–æ–π –ø–ª–∞—Ç–æ–π",
                "üí° –£—á–∏—Ç—ã–≤–∞–π—Ç–µ –≥–∞–±–∞—Ä–∏—Ç—ã –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–æ–≤ –ø—Ä–∏ –≤—ã–±–æ—Ä–µ –∫–æ—Ä–ø—É—Å–∞"
            ];
            
            let currentTipIndex = 0;
            
            // –ú–µ–Ω—è–µ–º –ø–æ–¥—Å–∫–∞–∑–∫—É –∫–∞–∂–¥—ã–µ 8 —Å–µ–∫—É–Ω–¥
            setInterval(() => {
                tipText.textContent = tips[currentTipIndex];
                currentTipIndex = (currentTipIndex + 1) % tips.length;
            }, 8000);
        }

        function simulateSave() {
            const saveBtn = document.getElementById('save-build-btn');
            const saveText = document.getElementById('save-btn-text');
            
            if (!saveBtn || !saveText) return;
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≥—Ä—É–∑–∫–∏
            saveText.innerHTML = '<div class="loading-spinner"></div> –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ...';
            saveBtn.disabled = true;
            
            // –ò–º–∏—Ç–∏—Ä—É–µ–º —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ
            setTimeout(() => {
                saveText.innerHTML = '<span class="success-checkmark">‚úì</span> –°–±–æ—Ä–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞!';
                showFloatingTooltip('‚úÖ –°–±–æ—Ä–∫–∞ —É—Å–ø–µ—à–Ω–æ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞! –í—ã –º–æ–∂–µ—Ç–µ –≤–µ—Ä–Ω—É—Ç—å—Å—è –∫ –Ω–µ–π –ø–æ–∑–∂–µ.');
                
                // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –æ–±—ã—á–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
                setTimeout(() => {
                    saveText.textContent = '–°–æ—Ö—Ä–∞–Ω–∏—Ç—å —Å–±–æ—Ä–∫—É';
                    saveBtn.disabled = false;
                }, 3000);
            }, 1500);
        }

        // –°–£–©–ï–°–¢–í–£–Æ–©–ò–ï –§–£–ù–ö–¶–ò–ò
        function displayComponents(category = 'all') {
            const container = document.getElementById('components-container');
            if (!container) return;
            
            container.innerHTML = '';
            
            let componentsToShow = [];
            
            if (category === 'all') {
                for (const key in componentsDB) {
                    componentsToShow = componentsToShow.concat(componentsDB[key]);
                }
            } else {
                componentsToShow = componentsDB[category] || [];
            }
            
            componentsToShow.forEach(component => {
                const categoryName = getCategoryById(component.id);
                const card = document.createElement('div');
                card.className = 'component-card';
                card.dataset.id = component.id;
                card.dataset.category = categoryName;
                
                card.innerHTML = `
                    <div class="card-image">
                        ${component.image ? `<img src="${component.image}" alt="${component.name}" loading="lazy">` : `<i>${getCategoryIcon(categoryName)}</i>`}
                    </div>
                    <div class="card-content">
                        <h3 class="card-title" onclick="showComponentDetails(${component.id})">${component.name}</h3>
                        <p class="card-specs">${component.specs}</p>
                        <div class="card-price">${component.price.toLocaleString()} ‚ÇΩ</div>
                        <div class="card-actions">
                            <button class="card-btn add-to-build" onclick="addToBuild(${component.id})">–î–æ–±–∞–≤–∏—Ç—å</button>
                            <button class="card-btn compare-btn" onclick="addToCompare(${component.id})">–°—Ä–∞–≤–Ω–∏—Ç—å</button>
                        </div>
                    </div>
                `;
                
                container.appendChild(card);
            });
        }

        function showComponentDetails(id) {
            const component = findComponentById(id);
            if (component) {
                let details = `üíª ${component.name}\nüìã ${component.specs}\nüí∞ ${component.price.toLocaleString()} ‚ÇΩ`;
                if (component.socket) details += `\nüîå –°–æ–∫–µ—Ç: ${component.socket}`;
                if (component.tdp) details += `\nüî• TDP: ${component.tdp}W`;
                if (component.power) details += `\n‚ö° –ü–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ: ${component.power}W`;
                alert(details);
            }
        }

        function addToBuild(id) {
            const component = findComponentById(id);
            const category = getCategoryById(id);
            
            if (component && category) {
                currentBuild[category] = component;
                updateBuildDisplay();
                updateTotalCost();
                updateProgressIndicator();
                updateCompatibilityCheck(); // –í–´–ó–û–í –ü–†–û–í–ï–†–ö–ò –°–û–í–ú–ï–°–¢–ò–ú–û–°–¢–ò
                
                showFloatingTooltip(`‚úÖ ${component.name} –¥–æ–±–∞–≤–ª–µ–Ω –≤ —Å–±–æ—Ä–∫—É!`);
            }
        }

        function removeFromBuild(category) {
            const componentName = currentBuild[category]?.name;
            currentBuild[category] = null;
            updateBuildDisplay();
            updateTotalCost();
            updateProgressIndicator();
            updateCompatibilityCheck(); // –í–´–ó–û–í –ü–†–û–í–ï–†–ö–ò –°–û–í–ú–ï–°–¢–ò–ú–û–°–¢–ò
            
            if (componentName) {
                showFloatingTooltip(`üóëÔ∏è ${componentName} —É–¥–∞–ª–µ–Ω –∏–∑ —Å–±–æ—Ä–∫–∏`);
            }
        }

        function addToCompare(id) {
            const component = findComponentById(id);
            
            if (component && !compareList.find(item => item.id === id)) {
                compareList.push(component);
                updateCompareDisplay();
                showFloatingTooltip(`üìä ${component.name} –¥–æ–±–∞–≤–ª–µ–Ω –¥–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è`);
            } else {
                showFloatingTooltip('‚ö†Ô∏è –≠—Ç–æ—Ç –∫–æ–º–ø–æ–Ω–µ–Ω—Ç —É–∂–µ –¥–æ–±–∞–≤–ª–µ–Ω –¥–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è');
            }
        }

        function removeFromCompare(id) {
            compareList = compareList.filter(item => item.id !== id);
            updateCompareDisplay();
        }

        function updateBuildDisplay() {
            const buildList = document.getElementById('build-list');
            if (!buildList) return;
            
            buildList.innerHTML = '';
            
            let hasComponents = false;
            
            for (const category in currentBuild) {
                if (currentBuild[category]) {
                    hasComponents = true;
                    const component = currentBuild[category];
                    const item = document.createElement('div');
                    item.className = 'build-item';
                    
                    item.innerHTML = `
                        <div class="build-item-icon">${getCategoryIcon(category)}</div>
                        <div class="build-item-info">
                            <div class="build-item-name">${component.name}</div>
                            <div class="build-item-specs">${component.specs}</div>
                        </div>
                        <div class="build-item-price">${component.price.toLocaleString()} ‚ÇΩ</div>
                        <button class="remove-btn" onclick="removeFromBuild('${category}')">‚úï</button>
                    `;
                    
                    buildList.appendChild(item);
                }
            }
            
            if (!hasComponents) {
                buildList.innerHTML = `
                    <div class="empty-build-message">
                        <p>–í—ã–±–µ—Ä–∏—Ç–µ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ã –¥–ª—è –≤–∞—à–µ–π —Å–±–æ—Ä–∫–∏</p>
                        <p style="font-size: 0.9rem; color: var(--cosmic-light); margin-top: 10px;">
                            üí° <strong>–°–æ–≤–µ—Ç:</strong> –ù–∞—á–Ω–∏—Ç–µ —Å –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞ –∏ –º–∞—Ç–µ—Ä–∏–Ω—Å–∫–æ–π –ø–ª–∞—Ç—ã
                        </p>
                    </div>
                `;
            }
        }

        function updateTotalCost() {
            let total = 0;
            
            for (const category in currentBuild) {
                if (currentBuild[category]) {
                    total += currentBuild[category].price;
                }
            }
            
            const componentsCost = document.getElementById('components-cost');
            const totalCost = document.getElementById('total-cost');
            
            if (componentsCost) componentsCost.textContent = total.toLocaleString() + ' ‚ÇΩ';
            if (totalCost) totalCost.textContent = total.toLocaleString() + ' ‚ÇΩ';
        }

        function updateCompareDisplay() {
            const compareListContainer = document.getElementById('compare-list');
            const compareBtn = document.getElementById('compare-btn');
            
            if (!compareListContainer) return;
            
            compareListContainer.innerHTML = '';
            
            if (compareList.length > 0) {
                if (compareBtn) compareBtn.style.display = 'block';
                
                compareList.forEach(component => {
                    const item = document.createElement('div');
                    item.className = 'compare-item';
                    
                    item.innerHTML = `
                        <span>${component.name}</span>
                        <button class="remove-compare" onclick="removeFromCompare(${component.id})">‚úï</button>
                    `;
                    
                    compareListContainer.appendChild(item);
                });
            } else {
                if (compareBtn) compareBtn.style.display = 'none';
            }
        }

        function getCategoryById(id) {
            for (const category in componentsDB) {
                if (componentsDB[category].find(comp => comp.id === id)) {
                    return category;
                }
            }
            return null;
        }

        function getCategoryIcon(category) {
            const icons = {
                cpu: '‚öôÔ∏è', gpu: 'üéÆ', motherboard: 'üîå', ram: 'üß†',
                cooler: '‚ùÑÔ∏è', storage: 'üíæ', case: 'üì¶', psu: '‚ö°'
            };
            return icons[category] || 'üîß';
        }

        function findComponentById(id) {
            for (const category in componentsDB) {
                const component = componentsDB[category].find(comp => comp.id === id);
                if (component) return component;
            }
            return null;
        }

        function performComparison() {
            const resultsContainer = document.getElementById('compare-results');
            if (!resultsContainer) return;
            
            resultsContainer.innerHTML = '';
            
            if (compareList.length < 2) {
                resultsContainer.innerHTML = '<p>–í—ã–±–µ—Ä–∏—Ç–µ –∫–∞–∫ –º–∏–Ω–∏–º—É–º 2 –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∞ –¥–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è</p>';
                return;
            }
            
            const table = document.createElement('table');
            table.className = 'compare-table';
            
            const headerRow = document.createElement('tr');
            headerRow.innerHTML = '<th>–•–∞—Ä–∞–∫—Ç–µ—Ä–∏—Å—Ç–∏–∫–∞</th>';
            
            compareList.forEach(component => {
                headerRow.innerHTML += `<th>${component.name}</th>`;
            });
            
            table.appendChild(headerRow);
            
            const priceRow = document.createElement('tr');
            priceRow.innerHTML = '<td>–¶–µ–Ω–∞</td>';
            
            compareList.forEach(component => {
                priceRow.innerHTML += `<td>${component.price.toLocaleString()} ‚ÇΩ</td>`;
            });
            
            table.appendChild(priceRow);
            
            const specsRow = document.createElement('tr');
            specsRow.innerHTML = '<td>–•–∞—Ä–∞–∫—Ç–µ—Ä–∏—Å—Ç–∏–∫–∏</td>';
            
            compareList.forEach(component => {
                specsRow.innerHTML += `<td>${component.specs}</td>`;
            });
            
            table.appendChild(specsRow);
            
            resultsContainer.appendChild(table);
        }

        // –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø
        document.addEventListener('DOMContentLoaded', function() {
            displayComponents();
            updateQuickTips();
            updateProgressIndicator();
            updateCompatibilityCheck(); // –ü–ï–†–í–û–ù–ê–ß–ê–õ–¨–ù–ê–Ø –ü–†–û–í–ï–†–ö–ê
            
            const categoryTabs = document.querySelectorAll('.category-tab');
            categoryTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    categoryTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    displayComponents(this.dataset.category);
                });
            });
            
            const compareBtn = document.getElementById('compare-btn');
            if (compareBtn) {
                compareBtn.addEventListener('click', function() {
                    if (compareList.length > 1) {
                        performComparison();
                    }
                });
            }
            
            const saveBtn = document.getElementById('save-build-btn');
            if (saveBtn) {
                saveBtn.addEventListener('click', simulateSave);
            }
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–µ—Ä–≤—É—é –ø–æ–¥—Å–∫–∞–∑–∫—É —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
            setTimeout(() => {
                showFloatingTooltip('üëã –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å! –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ —Ñ–∏–ª—å—Ç—Ä—ã –¥–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ –ø–æ–∏—Å–∫–∞ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–æ–≤');
            }, 3000);
        });
    </script>
</body>
</html>
